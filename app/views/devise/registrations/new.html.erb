<div class="container">
  <div class="form-style">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :placeholder => "Email Address" %>
      </div>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autocomplete: "off", :placeholder => "Name" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password" %>
      </div>

      <div class="field">
        <%= f.label :avatar, "Avatar (Local OR URL)" %>
        <%= f.file_field :avatar, :accept => "image/jpeg, image/jpg, image/png" %>
        <%= f.text_field :remote_avatar_url, :accept => "image/jpeg, image/jpg, image/png", :placeholder => "pairbnb.com/abc.jpg" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class => "btn btn-primary", :style => "width: 191px; margin-bottom: 10px" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>