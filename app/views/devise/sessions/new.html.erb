<div class="container">
  <div class="form-style">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="input-group">
          <span class="input-group-addon"><span class="fa fa-envelope-o" aria-hidden="true"></span></span>
           <%= f.email_field :email, :placeholder => "Email Address", autofocus: true, required: true %>
        </div>
      </div>

      <div class="field">
        <div class="input-group">
          <span class="input-group-addon"><span class="fa fa-key" aria-hidden="true"></span></span>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: true %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, :style => "font-size: 14px" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.button :button, class: 'btn btn-primary', :style => "width: 229px; margin-bottom: 10px" do %>
          <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login
        <% end %>  
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>