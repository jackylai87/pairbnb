<%= form_for @listing, html: { multipart: true } do |f| %>

	<% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@listing.errors.count, "error") %> prohibited
        this listing from being saved:
      </h2>
      <ul>
        <% @listing.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title, autofocus: true, placeholder: "Title" %>
	</div>

	<div class="field">
		<%= f.label :tag_list, "Tags (seperated by comma)" %><br>
		<%= f.text_field :tag_list, placeholder: "non-smoker, clean room" %>
	</div>

	<div class="field">
		<%= f.label :home_type, "Home Type" %><br>
		<%= select(:listing, :home_type, [["Apartment"], ["Bungalow"], ["Condominium"], ["Link House"], ["Semi-Detached"], ["Terrace"], ["Service Residence"], ["Villa"]]) %>
	</div>

	<div class="field">
		<%= f.label :room_type, "Room Type" %><br>
		<%= select(:listing, :room_type, [["Entire Home / Apt"], ["Private Room"], ["Shared Room"]]) %>
	</div>

	<div class="field">
		<%= f.label :accomodate %><br>
		<%= select(:listing, :accomodate, [[1], [2], [3], [4], [5], [6], [7], [8]]) %>
	</div>

	<div class="field">
		<%= f.label :location %><br>
		<%= f.text_field :location, placeholder: "Address" %>
	</div>

	<div class="field">
		<%= f.label :city_state, "City, State" %><br>
		<%= select(:listing, :city_state, [["Cheras, Kuala Lumpur"], ["Cheras, Selangor"],["Shah Alam, Selangor"]]) %>
	</div>

	<div class="field">
		<%= f.label :country %><br>
		<%= select(:listing, :country, [["Malaysia"], ["Singapore"]]) %>
	</div>

	<div class="field">
		<%= f.label :price, "Price Per Night (MYR)" %><br>
		<%= f.number_field :price, min: 1, placeholder: "Price Per Night" %>
	</div>

	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_area :description, placeholder: "Description" %>
	</div>

	<div class="field">
		<%= f.label :main_image, "Main Image" %>
		<% if @listing.main_image.present? %>
			<p>
				<strong>Update / Remove Image</strong>
			</p>
			<%= f.file_field :main_image, :accept => "image/jpeg, image/jpg, image/png" %>
			<%= cl_image_tag @listing.main_image, :width=>50, :height=>50, :crop=>:fill, :style => "margin-bottom: 10px" %>
	  	<%= f.label :remove_image %>
			<%= f.check_box :remove_main_image %>
		<% else %>
			<%= f.file_field :main_image, :accept => "image/jpeg, image/jpg, image/png" %>
		<% end %>
 	</div>

 	<div class="field">
 		<%= f.label :sub_image_one, "Image 1" %>
 		<% if @listing.sub_image_one.present? %>
 			<p>
 				<strong>Update / Remove Image</strong>
 			</p>
			<%= f.file_field :sub_image_one, :accept => "image/jpeg, image/jpg, image/png" %>
			<%= cl_image_tag @listing.sub_image_one, :width=>50, :height=>50, :crop=>:fill, :style => "margin-bottom: 10px" %>
    	<%= f.label :remove_image %>
  		<%= f.check_box :remove_sub_image_one %>
  	<% else %>
  		<%= f.file_field :sub_image_one, :accept => "image/jpeg, image/jpg, image/png" %>
   	<% end %>
  </div>

  <div class="field">
		<%= f.label :sub_image_two, "Image 2" %>
	 	<% if @listing.sub_image_two.present? %>
 			<p>
				<strong>Update / Remove Image</strong>
			</p>
 			<%= f.file_field :sub_image_two, :accept => "image/jpeg, image/jpg, image/png" %>
			<%= cl_image_tag @listing.sub_image_two, :width=>50, :height=>50, :crop=>:fill, :style => "margin-bottom: 10px" %>
    	<%= f.label :remove_image %>
  		<%= f.check_box :remove_sub_image_two %>
  	<% else %>
  		<%= f.file_field :sub_image_two, :accept => "image/jpeg, image/jpg, image/png" %>
   	<% end %>
	</div>

	<div class="field">
		<%= f.submit :class => "btn btn-primary", :style => "width: 190px; margin-bottom: 10px" %>
	</div>

<% end %>